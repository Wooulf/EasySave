<Window x:Class="WpfApp3.View.PopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="PopUp" Icon="/img/EasySave.ico" ResizeMode="NoResize" Height="102" Width="406" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Label x:Key="text"></Label>
        <Visibility x:Key="cancelOption">Hidden</Visibility>
    </Window.Resources>
    <Grid>
        <Label Name="popupTitle" Content="{DynamicResource text}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,3,0,0"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="307,36,0,0" VerticalAlignment="Top" Padding="5,1,5,1" Click="OnConfirmClick">

        </Button>
        <Button Content="Cancel" Visibility="{DynamicResource cancelOption}" HorizontalAlignment="Left" Margin="341,36,0,0" VerticalAlignment="Top" Padding="5,1,5,1" Click="OnCancelClick"/>

    </Grid>
</Window>
